mixin formProyecto(project = {})

    form.agregar-proyecto(action=`/project/${project.id}` method=`POST` )
        .campo  
            label(for="nombre") Nombre proyecto:
            input(value=project.nombre type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto")
        .campo.enviar
            input(type="submit" value=`${project.id?'Guardar':'Agregar'}` class="boton")  