extends layout

block Contenido
    .contenido-principal
        h1 #{nombrePagina} - #{project.name}

        form.agregar-tarea(action=`/project/task/${project.url}` method="POST")
            .campo
                label(for="name") Tarea:
                input.nombre-tarea(type="text" id="name" name="name" placeholder="Nombre tarea")
            .campo.enviar
                input.boton.nueva-tarea(type="submit" value="Agregar")
 
        // TO-DO Listado pendientes

        // Acciones permitidas
        .contenedor-acciones
            a(href=`/project/edit/${project.id}` class="boton") Editar proyecto
            button#eliminar-proyecto(data-project-url=project.url type="button" class="boton eliminar") Eliminar proyecto